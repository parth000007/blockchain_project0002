# Backend Environment Variables (.env)

# Server Configuration
PORT=3001
NODE_ENV=development

# Blockchain Configuration
PROVIDER_URL=https://rpc.ankr.com/polygon
CHAIN_ID=137
CONTRACT_ADDRESS=0x...your_contract_address
AIX_TOKEN_ADDRESS=0x...your_token_address
SUBSCRIPTION_NFT_ADDRESS=0x...your_nft_address
GOVERNANCE_ADDRESS=0x...your_governance_address

# Private Keys (NEVER commit these!)
DEPLOYER_PRIVATE_KEY=your_private_key_here
ADMIN_PRIVATE_KEY=your_admin_private_key

# AI API Keys
OPENAI_API_KEY=sk-...your_openai_key
GEMINI_API_KEY=your_gemini_key_here

# Database (Optional - for production)
MONGODB_URI=mongodb://localhost:27017/aix_platform
REDIS_URL=redis://localhost:6379

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=debug

# ============================================
# Frontend Environment Variables (.env)
# ============================================

# API Configuration
REACT_APP_API_URL=http://localhost:3001/api

# Smart Contract Addresses
REACT_APP_CONTRACT_ADDRESS=0x...your_contract_address
REACT_APP_TOKEN_ADDRESS=0x...your_token_address
REACT_APP_SUBSCRIPTION_NFT_ADDRESS=0x...your_nft_address
REACT_APP_GOVERNANCE_ADDRESS=0x...your_governance_address

# Blockchain Network
REACT_APP_CHAIN_ID=137
REACT_APP_NETWORK_NAME=Polygon
REACT_APP_RPC_URL=https://rpc.ankr.com/polygon

# Features Flags
REACT_APP_ENABLE_SUBSCRIPTIONS=true
REACT_APP_ENABLE_GOVERNANCE=true
REACT_APP_ENABLE_MARKETPLACE=true

# Analytics (Optional)
REACT_APP_GOOGLE_ANALYTICS=UA-XXXXXXXXX-X

# WalletConnect Project ID
REACT_APP_WALLETCONNECT_PROJECT_ID=your_project_id_here
